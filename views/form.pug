html
  head
    title='Container' + id
  body
    form(method='post' action='/data')
      input(type='hidden', value=metadata.id, name='metadata_id')
      each field in (metadata.fields||[])
        div
          label=field.label
          input(type='text', name=field.name)
      div
        input(type='submit', value='Submit')
